<!doctype html>
<html lang="en">
<head>
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<title>Vitals Tracker</title>

<style>
:root{
  --bg:#ffffff;
  --fg:#0b0b0b;
  --card:#f2f2f2;
  --accent:#005fcc;
  --radius:18px;
  --font:28px;
}

*{box-sizing:border-box}

body{
  margin:0;
  font-family:system-ui,-apple-system,Segoe UI,Roboto,Helvetica,Arial,sans-serif;
  background:var(--bg);
  color:var(--fg);
  font-size:var(--font);
}

header{
  padding:20px;
  border-bottom:2px solid #ddd;
}

h1{
  margin:0;
  font-size:1.4em;
}

main{
  max-width:900px;
  margin:0 auto;
  padding:20px;
}

.card{
  background:var(--card);
  border-radius:var(--radius);
  padding:20px;
  margin-bottom:20px;
}

label{
  font-weight:800;
  display:block;
  margin-top:18px;
}

input, textarea, button{
  width:100%;
  font-size:1em;
  padding:16px;
  margin-top:8px;
  border-radius:var(--radius);
  border:2px solid #999;
}

button{
  background:var(--accent);
  color:#fff;
  font-weight:900;
  border:none;
  margin-top:24px;
}

button:active{
  opacity:0.85;
}

.small{
  font-size:0.85em;
  opacity:0.8;
}
</style>
</head>

<body>
<header>
  <h1>Vitals Tracker</h1>
  <div class="small">Simple, local, accessible</div>
</header>

<main>
  <div class="card">
    <label for="date">Date</label>
    <input id="date" type="date">

    <label for="time">Time</label>
    <input id="time" type="time">

    <label for="sys">Systolic</label>
    <input id="sys" type="number" inputmode="numeric">

    <label for="dia">Diastolic</label>
    <input id="dia" type="number" inputmode="numeric">

    <label for="hr">Heart Rate</label>
    <input id="hr" type="number" inputmode="numeric">

    <label for="symptoms">Symptoms</label>
    <textarea id="symptoms" rows="3"></textarea>

    <label for="notes">Notes</label>
    <textarea id="notes" rows="3"></textarea>

    <button onclick="saveEntry()">Save</button>
  </div>
</main>

<script>
const d=new Date();
document.getElementById("date").value=d.toISOString().slice(0,10);
document.getElementById("time").value=d.toTimeString().slice(0,5);
document.getElementById("sys").focus();

function saveEntry(){
  const entry={
    date:date.value,
    time:time.value,
    systolic:sys.value,
    diastolic:dia.value,
    hr:hr.value,
    symptoms:symptoms.value,
    notes:notes.value
  };

  const data=JSON.parse(localStorage.getItem("vitals")||"[]");
  data.push(entry);
  localStorage.setItem("vitals",JSON.stringify(data));

  sys.value="";
  dia.value="";
  hr.value="";
  symptoms.value="";
  notes.value="";
  sys.focus();

  alert("Saved");
}
</script>
</body>
</html>
